{
  "redirects": [
    {
      "source": "/.well-known/farcaster.json",
      "destination": "https://api.farcaster.xyz/miniapps/hosted-manifest/019b19f2-6ca6-3bb7-c3e0-f374fc02f670",
      "permanent": false
    }
  ],
  "buildCommand": "yarn build",
  "installCommand": "yarn install --frozen-lockfile",
  "framework": "nextjs",
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/auto-feature-winner",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/game/update-battle-scores",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/game/resolve-battle",
      "schedule": "0 * * * *"
    }
  ]
}

